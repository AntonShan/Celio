{
  "compilerOptions": {
    "target": "ESNext",
    "removeComments": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "ESNext",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "types": [
      "@types/node",
      "@types/jest",
      "@types/mocha",
      "@types/nearley"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "moduleResolution": "Node"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.spec.ts"
  ]
}
